<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="default_button" parent="android:Widget.Holo.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#404646</item>
    </style>

    <style name="simple_number_input_edittext" parent="android:Widget.Holo.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#404646</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="default_textview" parent="android:Widget.Holo.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">66sp</item>
        <item name="android:textColor">#404646</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="big_textview" parent="default_textview">
        <item name="android:textSize">132sp</item>
    </style>

    <style name="medium_grey_darkest_textview" parent="default_textview">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
    </style>

    <style name="small_grey_darkest_textview" parent="default_textview">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
    </style>

    <style name="simple_number_input_heading" parent="smallest_grey_darkest_textview">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="smallest_grey_darkest_textview" parent="default_textview">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_darkest</item>
    </style>


    <!-- clocking_bundy_alert_dialog styles -->

    <style name="clocking_bundy_alert_dialog_employee_name" parent="medium_grey_darkest_textview">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="action_button" parent="default_button">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/action_button</item>
    </style>

    <style name="text_view_icon" parent="android:Widget.Holo.TextView">
        <item name="android:shadowColor">#7f8c8d</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
